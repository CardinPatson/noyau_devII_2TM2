# -*- coding: utf-8 -*-
#:import config src.config.config

<ConversationContainer@ScrollView>
    do_scroll_x: False
    do_scroll_y: True
    size_hint: (1, .95)

    GridLayout:
        cols: 1
        spacing: 2
        size_hint_y: None

        Label:
            text: "JE SUIS l'UTILISATEUR ALIGNÉ A DROITE"
            halign: "right"
            text_size: self.size
            valign: 'middle'
            padding: 20, 0

        Label:
            text: "JE SUIS lE CORRESPONDANT ALIGNÉ A GAUCHE"
            halign: "left"
            text_size: self.size
            valign: 'middle'
            padding: 20, 0


<MessageInput@TextInput>
    size_hint: (.7, 1)
    font_size: 20
    padding: 10, 10


<SendMessageButton@Button>
    size_hint: (.1, 1)
    font_size: 20
    text: "Envoyer"
    background_color: config.BG_COLOR_LEVEL_1
    on_press: print("Il doit se passer quelque chose, à votre tour !")


<InputsContainer@BoxLayout>
    size_hint: (1, .05)
    orientation: "horizontal"

    MessageInput:

    SendMessageButton: